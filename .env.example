# Environment variables for AI Disease Prediction System
# Copy this file to .env and fill in your values

# Application Settings
DEBUG=False
LOG_LEVEL=INFO
ENVIRONMENT=production

# Federated Learning Configuration
FL_SERVER_HOST=localhost
FL_SERVER_PORT=8080
FL_ROUNDS=10
FL_MIN_CLIENTS=3

# Privacy Settings (Safe to expose - these are system parameters)
DIFFERENTIAL_PRIVACY_EPSILON=1.0
DIFFERENTIAL_PRIVACY_DELTA=1e-05

# Model Configuration (Public paths)
MODEL_PATH=./models/best_model.pt
DATA_PATH=./data/processed/

# Dashboard Configuration
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8501
DASHBOARD_DEBUG=False

# Note: No sensitive API keys or secrets are required for this medical AI system
# All processing is done locally with the trained model

# Security (for production)
# ENCRYPTION_KEY=your_encryption_key_here
# API_SECRET_KEY=your_api_secret_key_here
